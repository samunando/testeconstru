---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import { CircleArrowUp } from "lucide-astro";
---

<html lang="pt-BR">
  <head>
    <!-- Metadados básicos -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Uma landing page incrível para o seu negócio."
    />
    <meta
      name="keywords"
      content="landing page, negócios, marketing, Astro, React, Tailwind"
    />
    <meta name="author" content="Sua Empresa" />

    <!-- Open Graph / Redes Sociais -->
    <meta property="og:title" content="Minha Landing Page" />
    <meta
      property="og:description"
      content="Uma landing page incrível para o seu negócio."
    />
    <meta property="og:image" content="/images/og-image.jpg" />
    <meta property="og:url" content="https://www.seusite.com" />
    <meta property="og:type" content="website" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Título da Página -->
    <title>ConstruSteel</title>
  </head>
  <body class="bg-gradient-to-r from-[#FFFFFF] via-[#F0F0F0] to-[#999999]">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
