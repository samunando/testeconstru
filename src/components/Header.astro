---
import React from "react"; // Pode remover essa linha se não estiver usando React de fato
---

<header
  class="text-black h-[79px] flex items-center justify-center"
  id="header"
>
  <div
    class="flex justify-between items-center mx-auto px-4 container relative"
  >
    <img
      src="/uploads/gerais/logocomtexto.png"
      alt="Logo"
      class="z-10 w-[200px] h-auto mt-6"
    />

    <!-- Botão hamburguer -->
    <button id="menu-btn" class="block lg:hidden text-3xl z-50 text">
      ☰
    </button>

    <!-- Navegação -->
    <nav
      id="mobile-menu"
      class="hidden lg:flex absolute lg:static top-[75px] lg:top-0 left-0 bg-white lg:bg-transparent w-full lg:w-auto p-4 lg:p-0 transition-all z-40 drop-shadow-lg rounded-b-md lg:rounded-b-none"
    >
      <ul
        class="flex flex-col lg:flex-row gap-4 lg:gap-6 font-semibold text-xl"
      >
        <li class="hover:scale-105">
          <a href="#sobre" class="hover:text-[#E57B4A]">Sobre</a>
        </li>
        <li class="hover:scale-105">
          <a href="#servicos" class="hover:text-[#E57B4A]">Serviços</a>
        </li>
        <li class="hover:scale-105">
          <a href="#portfolio" class="hover:text-[#E57B4A]">Portfólio</a>
        </li>
        <li class="hover:scale-105">
          <a href="#contato" class="hover:text-[#E57B4A]">Contatos</a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<!-- Script para abrir/fechar o menu -->
<script>
  const menuBtn = document.getElementById("menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");

  if (menuBtn) {
    menuBtn.addEventListener("click", () => {
      if (mobileMenu) {
        mobileMenu.classList.toggle("hidden");
      }
    });
  }
</script>
